---
// About page
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const testimonials = [
  {
    name: "Leo Santini",
    role: "General Manager, ShapeCUT",
    quote: "Crystal Ball Recruiting made our recruitment efficient, effective, and effortless."
  },
  {
    name: "Craig Armstrong",
    role: "CEO, Mortim Australia",
    quote: "It brings science to the behavioural side of recruitment, validating gut instincts with data."
  },
  {
    name: "Brendan O'Shea",
    role: "National Sales Manager, Knotwood ANZ",
    quote: "Every hire feels stronger than the last. The system raises the bar."
  },
  {
    name: "Alicia Dempster",
    role: "Hiring Manager",
    quote: "We stopped gambling on gut feel and started making data-driven hiring decisions."
  },
  {
    name: "Mark Thompson",
    role: "Sales Director",
    quote: "The 21 competencies framework changed how we evaluate every candidate."
  },
  {
    name: "Sarah Chen",
    role: "HR Director",
    quote: "Our sales turnover dropped by 40% after implementing Jason's methodology."
  }
];

const stats = [
  { number: '30+', label: 'Years in Sales Leadership' },
  { number: '91%', label: 'Assessment Accuracy' },
  { number: '2M+', label: 'Salespeople Assessed (OMG)' },
  { number: '50%', label: 'Of Sales Hires Fail (Not Ours)' }
];

const values = [
  {
    icon: 'bx-target-lock',
    title: 'Results-Driven',
    description: 'Every strategy, framework, and recommendation is designed to deliver measurable outcomes.'
  },
  {
    icon: 'bx-bulb',
    title: 'Practical Wisdom',
    description: 'No theory for theory\'s sake. Everything taught can be implemented immediately.'
  },
  {
    icon: 'bx-heart',
    title: 'People First',
    description: 'Great sales organisationss are built on great people. Hiring right is the foundation.'
  },
  {
    icon: 'bx-trending-up',
    title: 'Continuous Growth',
    description: 'The best sales leaders never stop learning. Neither should their teams.'
  }
];
---

<Layout>
  <Nav variant="light" />

  <!-- Hero -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
            About Jason
          </p>
          <h1 class="text-brand-700 dark:text-brand-100 mb-6">
            From the front lines to fixing how Australia hires salespeople
          </h1>
          <p class="text-lg text-brand-600 dark:text-brand-400">
            Jason Howes isn't just a speaker—he's in the trenches every day, actively hunting for new business and leading from the front. He knows the pressure, the pace, and the persistence it takes to succeed in sales because he lives it.
          </p>
        </div>
        <div class="flex justify-center">
          <img
            src="/Jason-Howes-speaking-2.webp"
            alt="Jason Howes"
            class="w-full rounded-2xl shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-12 px-4">
    <div class="max-w-7xl mx-auto space-y-6 border border-brand-200 dark:border-brand-700 rounded-2xl p-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <p class="text-4xl md:text-5xl font-bold text-brand-700 dark:text-brand-100 mb-2">
              {stat.number}
            </p>
            <p class="text-sm text-brand-600 dark:text-brand-400">
              {stat.label}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Story -->
  <section class="py-16 md:py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl mx-auto">
        <img
          src="/jason-howes-sales-training-recuitment.webp"
          alt="Jason Howes Sales Training"
          class="w-full rounded-2xl shadow-xl mb-12"
        />
        <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4 text-center">
          The Story
        </p>
        <h2 class="text-brand-700 dark:text-brand-100 mb-8 text-center">
          From the trenches to the boardroom
        </h2>

        <div class="space-y-6 text-brand-600 dark:text-brand-400">
          <p>
            Jason's journey began on the front lines of sales, where he quickly learned that success isn't about tricks or manipulation—it's about understanding people, solving problems, and building genuine relationships. He closed multi-million dollar contracts and managed sales budgets exceeding $100M.
          </p>
          <p>
            After years of consistently outperforming his peers, Jason moved into sales leadership. But it was in recruiting where he had his biggest breakthrough. He realized that most sales hiring was fundamentally broken—companies gambling on candidates based on gut feel and rehearsed interview answers, only to watch 50% or more of their hires fail within 18 months.
          </p>
          <p>
            In 2018, Jason left corporate to solve this crisis. He partnered with Objective Management Group—the world's leading sales assessment company with data from over 2 million salespeople—to bring science-backed hiring to Australia.
          </p>
          <p>
            The result? A 91% accurate assessment process that identifies the top 20% of sales professionals before you invest a cent. No more gut feel. No more hoping. Just data-driven decisions that deliver measurable ROI.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-16 md:py-24 px-4 bg-brand-50 dark:bg-brand-950">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl mb-12 text-center mx-auto">
        <img
          src="/jason-howes-high-performance-sales-teams.webp"
          alt="Jason Howes High Performance Sales Teams"
          class="w-full rounded-2xl shadow-xl mb-12"
        />
        <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
          Philosophy
        </p>
        <h2 class="text-brand-700 dark:text-brand-100 mb-4">
          What drives the work
        </h2>
        <p class="text-brand-600 dark:text-brand-400">
          These principles guide every engagement, every training, and every piece of advice.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value) => (
          <div class="bg-brand-100 dark:bg-brand-900 rounded-2xl p-8 border border-brand-200 dark:border-brand-700">
            <div class="w-12 h-12 rounded-xl bg-brand-100 dark:bg-brand-800 flex items-center justify-center mb-6">
              <i class={`bx ${value.icon} text-2xl text-brand-500 dark:text-brand-400`}></i>
            </div>
            <h3 class="text-lg font-semibold text-brand-700 dark:text-brand-100 mb-3">
              {value.title}
            </h3>
            <p class="text-sm text-brand-600 dark:text-brand-400">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Expertise -->
  <section class="py-16 md:py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
            Expertise
          </p>
          <h2 class="text-brand-700 dark:text-brand-100 mb-6">
            Deep knowledge across the sales ecosystem
          </h2>
          <p class="text-brand-600 dark:text-brand-400 mb-8">
            Jason brings hands-on experience in every aspect of building and leading sales organisationss.
          </p>

          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <i class="bx bx-check-circle text-xl text-brand-500 mt-0.5"></i>
              <div>
                <p class="font-medium text-brand-700 dark:text-brand-100">Sales Talent Assessment</p>
                <p class="text-sm text-brand-600 dark:text-brand-400">Diagnostic tools and frameworks for evaluating sales candidates</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <i class="bx bx-check-circle text-xl text-brand-500 mt-0.5"></i>
              <div>
                <p class="font-medium text-brand-700 dark:text-brand-100">Sales Team Development</p>
                <p class="text-sm text-brand-600 dark:text-brand-400">Training programs that build skills and change behavior</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <i class="bx bx-check-circle text-xl text-brand-500 mt-0.5"></i>
              <div>
                <p class="font-medium text-brand-700 dark:text-brand-100">Sales Leadership Coaching</p>
                <p class="text-sm text-brand-600 dark:text-brand-400">Executive guidance for sales leaders at all levels</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <i class="bx bx-check-circle text-xl text-brand-500 mt-0.5"></i>
              <div>
                <p class="font-medium text-brand-700 dark:text-brand-100">Sales organisations Design</p>
                <p class="text-sm text-brand-600 dark:text-brand-400">Structure, compensation, and process optimization</p>
              </div>
            </li>
          </ul>
        </div>

        <div class="bg-brand-100 dark:bg-brand-900 rounded-2xl p-8 md:p-12 h-full flex flex-col justify-center relative overflow-hidden" data-expertise-testimonial-root>
          {testimonials.map((t, index) => (
            <div
              class={`expertise-testimonial-slide absolute inset-0 p-8 md:p-12 flex flex-col justify-center transition-opacity duration-500 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
              data-expertise-slide
              data-index={index}
            >
              <blockquote class="text-xl md:text-2xl text-brand-700 dark:text-brand-300 mb-6">
                "{t.quote}"
              </blockquote>
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-brand-200 dark:bg-brand-800 flex items-center justify-center">
                  <span class="text-brand-600 dark:text-brand-400 font-semibold">{t.name.split(' ').map(n => n[0]).join('')}</span>
                </div>
                <div>
                  <p class="font-medium text-brand-700 dark:text-brand-100">{t.name}</p>
                  <p class="text-sm text-brand-500">{t.role}</p>
                </div>
              </div>
            </div>
          ))}

          <!-- Navigation Dots -->
          <div class="absolute bottom-4 left-8 md:left-12 flex gap-2" role="tablist" aria-label="Testimonials">
            {testimonials.map((_, index) => (
              <button
                type="button"
                class={`expertise-dot size-2 rounded-full transition-all duration-300 ${index === 0 ? 'bg-brand-600 dark:bg-brand-400 scale-125' : 'bg-brand-300 dark:bg-brand-600 hover:bg-brand-500'}`}
                data-expertise-dot
                data-index={index}
                aria-label={`Show testimonial ${index + 1}`}
              ></button>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- CTA -->
  <section class="pb-16 md:pb-24 px-4">
    <div class="max-w-3xl mx-auto text-center">
          <div class="max-w-3xl mx-auto py-16">
      <img
        src="/jason-howes-about-pano.webp"
        alt="Jason Howes"
        class="w-full rounded-2xl shadow-xl"
      />
    </div>
      <h2 class="mb-4">
        Let's work together
      </h2>
      <p class=" mb-8">
        Whether you need a keynote speaker, a training partner, or strategic consulting, Jason is ready to help your organisations succeed.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/engage-jason" class="btn btn-primary">
          Explore Services
        </a>
        <a href="/contact" class="btn btn-secondary">
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  const root = document.querySelector('[data-expertise-testimonial-root]');
  if (root) {
    const slides = Array.from(root.querySelectorAll('[data-expertise-slide]'));
    const dots = Array.from(root.querySelectorAll('[data-expertise-dot]'));
    let active = 0;
    let timerId: number | undefined;

    const setActive = (nextIndex: number) => {
      slides.forEach((slide, index) => {
        const isActive = index === nextIndex;
        slide.classList.toggle('opacity-100', isActive);
        slide.classList.toggle('z-10', isActive);
        slide.classList.toggle('opacity-0', !isActive);
        slide.classList.toggle('z-0', !isActive);
      });

      dots.forEach((dot, index) => {
        const isActive = index === nextIndex;
        dot.classList.toggle('bg-brand-600', isActive);
        dot.classList.toggle('dark:bg-brand-400', isActive);
        dot.classList.toggle('scale-125', isActive);
        dot.classList.toggle('bg-brand-300', !isActive);
        dot.classList.toggle('dark:bg-brand-600', !isActive);
      });

      active = nextIndex;
    };

    const advance = () => {
      const nextIndex = (active + 1) % slides.length;
      setActive(nextIndex);
    };

    const resetTimer = () => {
      if (timerId) window.clearInterval(timerId);
      timerId = window.setInterval(advance, 5000);
    };

    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const nextIndex = Number((dot as HTMLElement).dataset.index);
        setActive(nextIndex);
        resetTimer();
      });
    });

    resetTimer();

    root.addEventListener('mouseenter', () => {
      if (timerId) window.clearInterval(timerId);
    });
    root.addEventListener('mouseleave', resetTimer);
  }
</script>
