---
// Books page
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const books = [
  {
    title: 'Crystal Ball Recruiting',
    subtitle: 'The Sales Hiring Playbook',
    description: "The playbook that's transforming how Australia hires salespeople.",
    image: '/Crystal_Ball_Recruiting-book.png',
    buyLink: 'https://checkout.square.site/merchant/MLYMGRG25RRY0/checkout/WKYHCC24YGZPUBFU2GCGYYD4',
    featured: true
  },
  {
    title: 'Sales Management. Simplified.',
    subtitle: 'The Straight Truth About Getting Exceptional Results from Your Sales Team',
    description: 'A practical guide to sales management that cuts through the noise and delivers real-world strategies that work.',
    image: 'https://placehold.co/400x600/b8d0ed/244a78?text=Book+2',
    buyLink: '#'
  },
  {
    title: 'New Sales. Simplified.',
    subtitle: 'The Essential Handbook for Prospecting and New Business Development',
    description: 'Master the art of prospecting and new business development with proven frameworks and actionable strategies.',
    image: 'https://placehold.co/400x600/b8d0ed/244a78?text=Book+3',
    buyLink: '#'
  }
];
---

<Layout>
  <Nav variant="light" />

  <!-- Hero -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
          Books by Jason Howes
        </p>
        <h1 class="text-brand-700 dark:text-brand-100 mb-6">
          Practical wisdom for sales leaders
        </h1>
        <p class="text-lg text-brand-600 dark:text-brand-400">
          Bestselling guides that have transformed thousands of sales organisationss. Implement what you learn immediately.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Book -->
  {books.filter(b => b.featured).map((book) => (
    <section class="py-16 md:py-24 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="order-2 lg:order-1">
            <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
              Featured Book
            </p>
            <h2 class="text-brand-700 dark:text-brand-100 mb-2">
              {book.title}
            </h2>
            <p class="text-lg text-brand-500 dark:text-brand-400 mb-6">
              {book.subtitle}
            </p>

            <!-- Problem statement -->
            <p class="text-brand-600 dark:text-brand-400 mb-4">
              50% of sales hires fail within 18 months—costing businesses over $200,000 per mistake. Crystal Ball Recruiting reveals the science-backed methodology Jason Howes has used to help hundreds of Australian businesses dramatically improve their sales hiring success rate.
            </p>

            <!-- What you'll learn -->
            <p class="text-brand-600 dark:text-brand-400 mb-6">
              Drawing on 2M+ salesperson assessments and 91% predictive accuracy, you'll discover the 21 core competencies that separate top performers from the rest, the STAR™ recruitment system to bring hiring in-house, and practical frameworks you can implement immediately.
            </p>

            <!-- Testimonial -->
            <div class="p-4 mb-8">
              <div class="flex text-yellow-400 mb-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
              </div>
              <p class="dark:text-brand-200 text-brand-800"><strong>"The Crystal Ball Process is like having the answers before the exam starts. Every hire feels stronger than the last."</strong></p>
              <p class="text-sm text-brand-600 dark:text-brand-400 mt-1">&mdash; Brendan O'Shea, National Sales Manager, Knotwood ANZ</p>
            </div>

            <div class="flex flex-wrap gap-4">
              <a href={book.buyLink} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                Buy Now
              </a>
              <a href="/Sample-Chapter-for-Crystal-Ball Recruiting.pdf" class="btn btn-secondary" download>
                <i class="bx bx-download"></i>
                Free Chapter
              </a>
            </div>
          </div>
          <div class="order-1 lg:order-2 flex justify-center">
            <img
              src={book.image}
              alt={book.title}
              class=""
            />
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- Other Books -->
  <section class="py-40 md:py-40 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-brand-700 dark:text-brand-100 mb-12">
        More from Jason
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {books.filter(b => !b.featured).map((book) => (
          <div class="flex gap-6">
            <img
              src={book.image}
              alt={book.title}
              class="w-32 md:w-40 rounded-lg shadow-lg flex-shrink-0"
            />
            <div>
              <h3 class="text-xl text-brand-700 dark:text-brand-100 mb-2">
                {book.title}
              </h3>
              <p class="text-sm text-brand-500 dark:text-brand-400 mb-3">
                {book.subtitle}
              </p>
              <p class="text-sm text-brand-600 dark:text-brand-400 mb-4">
                {book.description}
              </p>
              <a href={book.buyLink} class="btn btn-link">
                Learn more
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>
