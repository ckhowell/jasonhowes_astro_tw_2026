];

const useCases = [
  {
    title: 'Hiring New Salespeople',
    description: 'Screen candidates before investing interview time. Only progress those recommended by the assessment.',
    icon: 'bx-user-plus'
  },
  {
    title: 'Evaluating Your Current Team',
    description: 'Identify hidden gaps in your existing sales force. Know who can hunt, who should farm, and who needs coaching.',
    icon: 'bx-group'
  },
  {
    title: 'Promotion Decisions',
    description: 'Before promoting a top performer to management, verify they have the competencies to lead.',
    icon: 'bx-trending-up'
  },
  {
    title: 'Targeted Training',
    description: 'Stop generic training. The assessment reveals exactly where each person needs development.',
    icon: 'bx-bullseye'
  }
];

const testimonials = [
  {
    name: "Craig Armstrong",
    role: "CEO, Mortim Australia",
    quote: "It validates gut instincts with data-backed testing. That gave me real confidence in shortlisting strong candidates."
  },
  {
    name: "Leo Santini",
    role: "General Manager, ShapeCUT",
    quote: "By applying Jason's method, we attracted the right candidates and aligned them with purpose."
  },
  {
    name: "Brendan O'Shea",
    role: "National Sales Manager, Knotwood ANZ",
    quote: "Every hire feels stronger than the last. The system raises the bar and shows the team what good really looks like."
  }
];
---

<Layout
