---

<Layout title="Oatmeal Components Demo">
  <!-- Section Divider Helper -->
  <style>
    .section-label {
      background: linear-gradient(90deg, transparent, rgba(58, 120, 188, 0.1), transparent);
      border-top: 1px dashed rgba(58, 120, 188, 0.3);
      border-bottom: 1px dashed rgba(58, 120, 188, 0.3);
    }
  </style>

  <!-- Announcement Banner -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Announcement Banner</div>
  <AnnouncementBanner
    text="New: Crystal Ball Recruiting is now available"
    linkText="Get your copy"
    linkHref="#"
    dismissable={true}
  />

  <!-- Hero Centered -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500 mt-8">Hero Centered</div>
  <HeroCentered
    eyebrow="Introducing Crystal Ball Recruiting"
    eyebrowLink="#"
    headline="Stop gambling on sales hires"
    subheadline="The science-backed system for identifying, assessing, and hiring sales talent that actually performs."
    primaryCTA={{ text: "Get the book", href: "#" }}
    secondaryCTA={{ text: "Learn more", href: "#" }}
  />

  <!-- Logo Strip -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Logo Strip</div>
  <LogoStrip
    headline="Trusted by leading companies"
    logos={logos}
  />

  <!-- Hero Two Column -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Hero Two Column</div>
  <HeroTwoColumn
    eyebrow="About the Author"
    headline="35 years of sales expertise, distilled"
    subheadline="Jason Howes has helped hundreds of organizations transform their sales hiring. Now he's sharing the system."
    primaryCTA={{ text: "Meet Jason", href: "#" }}
    image={{ src: "https://placehold.co/600x500/b8d0ed/244a78?text=Jason+Howes", alt: "Jason Howes" }}
  />

  <!-- Hero With Image Below -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Hero With Image Below</div>
  <HeroWithImageBelow
    eyebrow="The Platform"
    headline="Your complete sales hiring system"
    subheadline="From assessment to onboarding, everything you need to build a world-class sales team."
    primaryCTA={{ text: "See it in action", href: "#" }}
    secondaryCTA={{ text: "Book a demo", href: "#" }}
    image={{ src: "https://placehold.co/1200x600/b8d0ed/244a78?text=Platform+Screenshot", alt: "Platform" }}
  />

  <!-- Features Alternating -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Features Alternating</div>
  <FeaturesAlternating
    sectionEyebrow="How It Works"
    sectionHeadline="A better way to hire salespeople"
    sectionDescription="Our proven methodology takes the guesswork out of sales recruitment."
    features={features}
  />

  <!-- Features Three Column -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Features Three Column</div>
  <FeaturesThreeColumn
    sectionEyebrow="Capabilities"
    sectionHeadline="Everything you need to succeed"
    sectionDescription="Powerful tools designed for modern sales organizations."
    features={threeColumnFeatures}
    variant="cards"
  />

  <!-- Statistics -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Statistics</div>
  <Statistics
    eyebrow="By the Numbers"
    headline="Proven results at scale"
    stats={stats}
    variant="bordered"
  />

  <!-- Testimonial Single -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Testimonial Single</div>
  <TestimonialSingle
    quote="Jason's methodology completely changed how we approach sales hiring. We've seen a 40% improvement in new hire performance and cut our turnover in half."
    name="Rebecca Martinez"
    role="Chief Revenue Officer"
    company="Altitude Tech"
    avatar="https://placehold.co/100x100/b8d0ed/244a78?text=RM"
    variant="large"
  />

  <!-- Testimonials Grid -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Testimonials Grid</div>
  <TestimonialsGrid
    eyebrow="What People Say"
    headline="Trusted by sales leaders everywhere"
    testimonials={testimonials}
    columns={3}
  />

  <!-- Values Grid -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Values Grid</div>
  <ValuesGrid
    eyebrow="Our Values"
    headline="What we stand for"
    description="The principles that guide everything we do."
    values={values}
    variant="bordered"
  />

  <!-- Team Grid -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Team Grid</div>
  <TeamGrid
    eyebrow="Our Team"
    headline="Meet the experts"
    description="Dedicated professionals committed to your success."
    team={team}
    columns={4}
  />

  <!-- FAQ Accordion -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">FAQ Accordion</div>
  <FAQAccordion
    eyebrow="FAQ"
    headline="Frequently asked questions"
    description="Everything you need to know about getting started."
    faqs={faqs}
    columns={2}
  />

  <!-- Pricing Cards -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Pricing Cards</div>
  <PricingCards
    eyebrow="Pricing"
    headline="Simple, transparent pricing"
    description="Choose the plan that's right for your team."
    tiers={pricingTiers}
  />

  <!-- CTA Section (Default) -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">CTA Section (Default)</div>
  <CTASection
    headline="Ready to transform your hiring?"
    description="Get started today and see the difference science-based hiring can make."
    primaryCTA={{ text: "Get started", href: "#" }}
    secondaryCTA={{ text: "Talk to sales", href: "#" }}
  />

  <!-- CTA Section (Contained) -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">CTA Section (Contained)</div>
  <CTASection
    eyebrow="Get Started"
    headline="Have questions?"
    description="Our team is here to help you find the right solution."
    primaryCTA={{ text: "Chat with us", href: "#" }}
    secondaryCTA={{ text: "Book a demo", href: "#" }}
    variant="contained"
  />

  <!-- CTA Section (Dark) -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">CTA Section (Dark)</div>
  <CTASection
    headline="Join thousands of sales leaders"
    description="Start building your championship team today."
    primaryCTA={{ text: "Get the book", href: "#" }}
    secondaryCTA={{ text: "Free chapter", href: "#" }}
    variant="dark"
  />

  <!-- Footer -->
  <div class="section-label py-2 text-center text-xs uppercase tracking-widest text-brand-500">Footer</div>
  <Footer
    logo={{ text: "Jason Howes", href: "/" }}
    description="Helping sales leaders build high-performing teams through science-based hiring."
    columns={footerColumns}
    newsletter={{
      headline: "Stay updated",
      description: "Get the latest insights on sales hiring.",
      placeholder: "Enter your email",
      buttonText: "Subscribe"
    }}
    socialLinks={[
      { platform: "twitter", href: "#" },
      { platform: "linkedin", href: "#" },
      { platform: "youtube", href: "#" },
    ]}
    copyright="© 2026 Jason Howes. All rights reserved."
    bottomLinks={[
      { text: "Privacy Policy", href: "#" },
      { text: "Terms of Service", href: "#" },
    ]}
  />
</Layout>
