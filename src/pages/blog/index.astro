---
// Blog index page listing all posts
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import PageHeader from '../../components/PageHeader.astro';

// Skip loading blog posts in development to speed up builds
const allPosts = import.meta.env.DEV ? [] : await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

// Function to convert title to sentence case
const toSentenceCase = (str: string) => {
  return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
};
---

<Layout>
  <Nav variant="light" />
  <div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <PageHeader
        title="From the blog"
        description="Practical thinking on recruitment, sales, and leadership from Jason Howes"
      />
      <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-24 border-t border-brand-400 pt-10 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {sortedPosts.map((post) => (
          <article class="flex max-w-xl flex-col items-start justify-between">
            <div class="flex items-center gap-x-4 text-xs">
              <time datetime={post.data.pubDate.toISOString()} class="text-gray-500">
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.data.category && (
                <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                  {post.data.category}
                </a>
              )}
            </div>
            <div class="group relative grow">
              <h5 class="mt-3 text-lg/6 font-semibold text-gray-900! group-hover:text-gray-900 blog-title">
                <a href={`/blog/${post.slug}`}>
                  <span class="absolute inset-0"></span>
                  {toSentenceCase(post.data.title)}
                </a>
              </h5>
              <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
                {post.data.description || 'Discover insights on sales leadership, recruitment strategies, and business growth from Jason Howes.'}
              </p>
            </div>
            <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
              <div class="size-10 rounded-full bg-gray-100 flex items-center justify-center">
                <span class="text-gray-600 text-sm font-semibold">JH</span>
              </div>
              <div class="text-sm/6">
                <p class="font-semibold text-gray-900">
                  <span>Jason Howes</span>
                </p>
                <p class="text-gray-600">Sales Leadership Expert</p>
              </div>
            </div>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-brand-600 text-lg">No blog posts yet.</p>
        </div>
      )}
    </div>
  </div>
  <Footer />
</Layout>