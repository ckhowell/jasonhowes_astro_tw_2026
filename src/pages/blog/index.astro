---
// Blog index page listing all posts
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

const allCategories = Array.from(new Set(allPosts.map(post => post.data.category).filter(Boolean)));

// Function to convert title to sentence case
const toSentenceCase = (str: string) => {
  return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
};
---

<Layout>
  <Nav variant="light" />

  <!-- Hero Header -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
          Insights & Ideas
        </p>
        <h1 class="text-brand-700 dark:text-brand-100 mb-6">
          From the blog
        </h1>
        <p class="text-lg text-brand-600 dark:text-brand-400">
          Practical thinking on recruitment, sales, and leadership.
        </p>
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="pb-8 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-wrap gap-3 mb-8">
        <button
          class="filter-btn px-4 py-2 rounded-full border text-sm font-medium transition bg-brand-500 text-white border-brand-500"
          data-category=""
        >
          All
        </button>
        {allCategories.map(category => (
          <button
            class="filter-btn px-4 py-2 rounded-full border text-sm font-medium transition bg-brand-100 dark:bg-brand-900 text-brand-700 dark:text-brand-200 border-brand-200 dark:border-brand-700"
            data-category={category}
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="pb-24 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="blog-grid">
        {sortedPosts.map((post) => (
          <article class="group blog-post" data-category={post.data.category || ''}>
            <a href={`/blog/${post.slug}`} class="block">
              <!-- Image placeholder or featured image -->
              {post.data.image ? (
                <div class="aspect-[16/10] rounded-2xl overflow-hidden mb-6 bg-brand-100 dark:bg-brand-800">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              ) : (
                <div class="aspect-[16/10] rounded-2xl mb-6 bg-brand-100 dark:bg-brand-800 flex items-center justify-center">
                  <i class="bx bx-file-blank text-4xl text-brand-300 dark:text-brand-600"></i>
                </div>
              )}

              <!-- Meta -->
              <div class="flex items-center gap-3 mb-3">
                {post.data.category && (
                  <span class="text-xs font-medium uppercase tracking-wider text-brand-500 dark:text-brand-400">
                    {post.data.category}
                  </span>
                )}
                <span class="text-xs text-brand-400 dark:text-brand-500">
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </span>
              </div>

              <!-- Title -->
              <h3 class="text-xl font-medium text-brand-700 dark:text-brand-100 mb-3 group-hover:text-brand-500 dark:group-hover:text-brand-300 transition-colors">
                {toSentenceCase(post.data.title)}
              </h3>

              <!-- Description -->
              <p class="text-sm text-brand-600 dark:text-brand-400 line-clamp-2 mb-4">
                {post.data.description || 'Discover insights on sales leadership, recruitment strategies, and business growth.'}
              </p>

              <!-- Read more -->
              <span class="btn btn-link">
                Read article
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-24">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-brand-100 dark:bg-brand-800 mb-6">
            <i class="bx bx-file-blank text-3xl text-brand-400 dark:text-brand-500"></i>
          </div>
          <p class="text-brand-600 dark:text-brand-400 text-lg">No blog posts yet.</p>
          <p class="text-brand-500 dark:text-brand-500 text-sm mt-2">Check back soon for new content.</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const blogPosts = document.querySelectorAll('.blog-post');

    const activeClasses = ['bg-brand-500', 'text-white', 'border-brand-500'];
    const inactiveClasses = ['bg-brand-100', 'dark:bg-brand-900', 'text-brand-700', 'dark:text-brand-200', 'border-brand-200', 'dark:border-brand-700'];

    const setActiveButton = (activeBtn: Element) => {
      filterButtons.forEach(btn => {
        btn.classList.remove(...activeClasses);
        btn.classList.add(...inactiveClasses);
      });
      activeBtn.classList.remove(...inactiveClasses);
      activeBtn.classList.add(...activeClasses);
    };

    const filterPosts = (category: string) => {
      blogPosts.forEach(post => {
        const postCategory = (post as HTMLElement).dataset.category || '';
        if (category === '' || postCategory === category) {
          (post as HTMLElement).style.display = '';
        } else {
          (post as HTMLElement).style.display = 'none';
        }
      });
    };

    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = (btn as HTMLElement).dataset.category || '';
        setActiveButton(btn);
        filterPosts(category);
      });
    });
  });
</script>
