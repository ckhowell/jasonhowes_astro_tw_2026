---
// Contact page
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Nav variant="light" />

  <!-- Hero -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
          Get in Touch
        </p>
        <h1 class="text-brand-700 dark:text-brand-100 mb-6">
          Let's start a conversation
        </h1>
        <p class="text-lg text-brand-600 dark:text-brand-400">
          Have a question about sales hiring, training, or leadership? Want to book Jason for an event? Drop us a line.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="pb-24 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Form -->
        <div class="bg-brand-50 dark:bg-brand-900 rounded-2xl p-8 md:p-10">
          <h2 class="text-2xl text-brand-700 dark:text-brand-100 mb-6">
            Send a message
          </h2>
          <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-brand-700 dark:text-brand-300 mb-2">
                  First name
                </label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  class="w-full px-4 py-3 rounded-lg border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-800 text-brand-700 dark:text-brand-100 placeholder-brand-400 dark:placeholder-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500"
                  placeholder="John"
                />
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium text-brand-700 dark:text-brand-300 mb-2">
                  Last name
                </label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  class="w-full px-4 py-3 rounded-lg border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-800 text-brand-700 dark:text-brand-100 placeholder-brand-400 dark:placeholder-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500"
                  placeholder="Smith"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-brand-700 dark:text-brand-300 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 rounded-lg border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-800 text-brand-700 dark:text-brand-100 placeholder-brand-400 dark:placeholder-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500"
                placeholder="john@company.com"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-medium text-brand-700 dark:text-brand-300 mb-2">
                Company
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 rounded-lg border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-800 text-brand-700 dark:text-brand-100 placeholder-brand-400 dark:placeholder-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500"
                placeholder="Company name"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-brand-700 dark:text-brand-300 mb-2">
                What can we help with?
              </label>
              <select
                id="subject"
                name="subject"
                class="w-full px-4 py-3 rounded-lg border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-800 text-brand-700 dark:text-brand-100 focus:outline-none focus:ring-2 focus:ring-brand-500"
              >
                <option value="">Select a topic</option>
                <option value="speaking">Speaking engagement</option>
                <option value="training">Training & workshops</option>
                <option value="consulting">Consulting & advisory</option>
                <option value="book">Book inquiry</option>
                <option value="media">Media request</option>
                <option value="other">Something else</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-brand-700 dark:text-brand-300 mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-800 text-brand-700 dark:text-brand-100 placeholder-brand-400 dark:placeholder-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500 resize-none"
                placeholder="Tell us about your needs..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 rounded-full bg-brand-900 dark:bg-white text-brand-100 dark:text-brand-700 font-medium text-sm hover:bg-brand-800 dark:hover:bg-brand-100 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl text-brand-700 dark:text-brand-100 mb-8">
            Other ways to connect
          </h2>

          <div class="space-y-8">
            <div>
              <h3 class="text-sm uppercase tracking-wider text-brand-500 dark:text-brand-500 mb-3">
                Email
              </h3>
              <a href="mailto:hello@jasonhowes.com" class="text-lg text-brand-700 dark:text-brand-100 hover:text-brand-500 dark:hover:text-brand-300 transition-colors">
                hello@jasonhowes.com
              </a>
            </div>

            <div>
              <h3 class="text-sm uppercase tracking-wider text-brand-500 dark:text-brand-500 mb-3">
                Phone
              </h3>
              <a href="tel:+61000000000" class="text-lg text-brand-700 dark:text-brand-100 hover:text-brand-500 dark:hover:text-brand-300 transition-colors">
                +61 000 000 000
              </a>
            </div>

            <div>
              <h3 class="text-sm uppercase tracking-wider text-brand-500 dark:text-brand-500 mb-3">
                Location
              </h3>
              <p class="text-lg text-brand-700 dark:text-brand-300">
                Sydney, Australia
              </p>
            </div>

            <div>
              <h3 class="text-sm uppercase tracking-wider text-brand-500 dark:text-brand-500 mb-3">
                Social
              </h3>
              <div class="flex gap-4">
                <a href="#" class="w-10 h-10 rounded-full bg-brand-100 dark:bg-brand-800 flex items-center justify-center text-brand-600 dark:text-brand-400 hover:bg-brand-200 dark:hover:bg-brand-700 transition-colors">
                  <i class="bx bxl-linkedin text-xl"></i>
                </a>
                <a href="#" class="w-10 h-10 rounded-full bg-brand-100 dark:bg-brand-800 flex items-center justify-center text-brand-600 dark:text-brand-400 hover:bg-brand-200 dark:hover:bg-brand-700 transition-colors">
                  <i class="bx bxl-twitter text-xl"></i>
                </a>
                <a href="#" class="w-10 h-10 rounded-full bg-brand-100 dark:bg-brand-800 flex items-center justify-center text-brand-600 dark:text-brand-400 hover:bg-brand-200 dark:hover:bg-brand-700 transition-colors">
                  <i class="bx bxl-instagram text-xl"></i>
                </a>
              </div>
            </div>
          </div>

          <!-- FAQ -->
          <div class="mt-12 pt-12 border-t border-brand-200 dark:border-brand-700">
            <h3 class="text-lg text-brand-700 dark:text-brand-100 mb-6">
              Quick answers
            </h3>
            <div class="space-y-4">
              <details class="group">
                <summary class="flex items-center justify-between cursor-pointer text-brand-700 dark:text-brand-300 hover:text-brand-700 dark:hover:text-brand-100">
                  <span>How quickly do you respond?</span>
                  <i class="bx bx-plus group-open:hidden"></i>
                  <i class="bx bx-minus hidden group-open:block"></i>
                </summary>
                <p class="mt-3 text-sm text-brand-600 dark:text-brand-400">
                  We typically respond to all inquiries within 24-48 business hours.
                </p>
              </details>
              <details class="group">
                <summary class="flex items-center justify-between cursor-pointer text-brand-700 dark:text-brand-300 hover:text-brand-700 dark:hover:text-brand-100">
                  <span>What's your availability for speaking?</span>
                  <i class="bx bx-plus group-open:hidden"></i>
                  <i class="bx bx-minus hidden group-open:block"></i>
                </summary>
                <p class="mt-3 text-sm text-brand-600 dark:text-brand-400">
                  Jason books 3-6 months in advance for most engagements. Contact us early to secure your preferred date.
                </p>
              </details>
              <details class="group">
                <summary class="flex items-center justify-between cursor-pointer text-brand-700 dark:text-brand-300 hover:text-brand-700 dark:hover:text-brand-100">
                  <span>Do you work with international clients?</span>
                  <i class="bx bx-plus group-open:hidden"></i>
                  <i class="bx bx-minus hidden group-open:block"></i>
                </summary>
                <p class="mt-3 text-sm text-brand-600 dark:text-brand-400">
                  Yes! Jason works with organizations globally, both in-person and virtually.
                </p>
              </details>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
