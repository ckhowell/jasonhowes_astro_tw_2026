---
// Courses page
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const courses = [
  {
    title: 'New Sales. Simplified.',
    subtitle: 'Master prospecting and new business development',
    description: 'A comprehensive program for salespeople who want to fill their pipeline with qualified opportunities. Learn the frameworks and tactics that top performers use every day.',
    duration: '6 weeks',
    format: 'Self-paced',
    modules: 12,
    price: '$497',
    link: '#',
    featured: true
  },
  {
    title: 'Sales Management. Simplified.',
    subtitle: 'Lead your team to exceptional results',
    description: 'For new and experienced managers who want to get more from their team. Covers coaching, accountability, hiring, and performance management.',
    duration: '8 weeks',
    format: 'Self-paced',
    modules: 16,
    price: '$697',
    link: '#'
  },
  {
    title: 'Your Sales Story',
    subtitle: 'Craft a compelling narrative that converts',
    description: 'Learn to tell your story in a way that resonates with prospects and differentiates you from the competition.',
    duration: '4 weeks',
    format: 'Self-paced',
    modules: 8,
    price: '$297',
    link: '#'
  },
  {
    title: 'Crystal Ball Recruiting',
    subtitle: 'Hire salespeople who actually perform',
    description: 'The complete system for identifying, assessing, and onboarding sales talent. Based on the bestselling book.',
    duration: '6 weeks',
    format: 'Self-paced',
    modules: 10,
    price: '$597',
    link: '#'
  }
];
---

<Layout>
  <Nav variant="light" />

  <!-- Hero -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-4">
          Online Courses
        </p>
        <h1 class="text-brand-700 dark:text-brand-100 mb-6">
          Learn at your own pace
        </h1>
        <p class="text-lg text-brand-600 dark:text-brand-400">
          Self-paced training programs designed for sales leaders and their teams. Master prospecting, pipeline management, and closing techniques on your schedule.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Course -->
  {courses.filter(c => c.featured).map((course) => (
    <section class="py-16 md:py-24 px-4 bg-brand-100 dark:bg-brand-900">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div>
            <span class="inline-block px-3 py-1 rounded-full bg-brand-100 dark:bg-brand-800 text-brand-600 dark:text-brand-300 text-xs font-medium mb-4">
              Most Popular
            </span>
            <h2 class="text-brand-700 dark:text-brand-100 mb-2">
              {course.title}
            </h2>
            <p class="text-lg text-brand-500 dark:text-brand-400 mb-4">
              {course.subtitle}
            </p>
            <p class="text-brand-600 dark:text-brand-400 mb-6">
              {course.description}
            </p>

            <div class="flex flex-wrap gap-6 mb-8 text-sm text-brand-600 dark:text-brand-400">
              <span class="flex items-center gap-2">
                <i class="bx bx-time text-lg"></i>
                {course.duration}
              </span>
              <span class="flex items-center gap-2">
                <i class="bx bx-book-open text-lg"></i>
                {course.modules} modules
              </span>
              <span class="flex items-center gap-2">
                <i class="bx bx-laptop text-lg"></i>
                {course.format}
              </span>
            </div>

            <div class="flex items-center gap-6">
              <a
                href={course.link}
                class="inline-flex items-center justify-center px-6 py-3 rounded-full bg-brand-900 dark:bg-white text-brand-100 dark:text-brand-700 font-medium text-sm hover:bg-brand-800 dark:hover:bg-brand-100 transition-colors"
              >
                Enroll Now - {course.price}
              </a>
              <a
                href="#"
                class="text-sm font-medium text-brand-500 dark:text-brand-400 hover:underline"
              >
                Preview curriculum
              </a>
            </div>
          </div>
          <div class="flex justify-center">
            <div class="w-full max-w-md aspect-video rounded-2xl bg-brand-200 dark:bg-brand-800 flex items-center justify-center">
              <i class="bx bx-play-circle text-6xl text-brand-400 dark:text-brand-600"></i>
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- All Courses -->
  <section class="py-16 md:py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-brand-700 dark:text-brand-100 mb-12">
        All Courses
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {courses.filter(c => !c.featured).map((course) => (
          <div class="bg-brand-50 dark:bg-brand-900 rounded-2xl p-6 md:p-8 border border-brand-200 dark:border-brand-700">
            <h3 class="text-xl text-brand-700 dark:text-brand-100 mb-2">
              {course.title}
            </h3>
            <p class="text-sm text-brand-500 dark:text-brand-400 mb-4">
              {course.subtitle}
            </p>
            <p class="text-sm text-brand-600 dark:text-brand-400 mb-6">
              {course.description}
            </p>

            <div class="flex flex-wrap gap-4 mb-6 text-xs text-brand-500 dark:text-brand-500">
              <span>{course.duration}</span>
              <span>{course.modules} modules</span>
            </div>

            <div class="flex items-center justify-between">
              <span class="text-lg font-semibold text-brand-700 dark:text-brand-100">
                {course.price}
              </span>
              <a
                href={course.link}
                class="inline-flex items-center gap-2 text-sm font-medium text-brand-500 dark:text-brand-400 hover:gap-3 transition-all"
              >
                Learn more
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 md:py-24 px-4 bg-brand-900 dark:bg-brand-950">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-brand-100 mb-4">
        Not sure which course is right for you?
      </h2>
      <p class="text-brand-300 mb-8">
        Book a free 15-minute consultation and we'll help you choose the program that fits your goals.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center px-6 py-3 rounded-full bg-white text-brand-700 font-medium text-sm hover:bg-brand-100 transition-colors"
      >
        Book a Call
      </a>
    </div>
  </section>

  <Footer />
</Layout>
