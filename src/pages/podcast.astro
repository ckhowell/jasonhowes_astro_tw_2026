---
// Podcast page
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const episodes = [
  {
    number: 42,
    title: 'Building a Championship Sales Team from Scratch',
    description: 'How one VP of Sales transformed a struggling team into top performers using science-based hiring.',
    duration: '45 min',
    date: 'Jan 15, 2026',
    link: '#'
  },
  {
    number: 41,
    title: 'The Traits That Actually Predict Sales Success',
    description: 'Forget gut instinct. Here are the measurable competencies that correlate with top performance.',
    duration: '38 min',
    date: 'Jan 8, 2026',
    link: '#'
  },
  {
    number: 40,
    title: 'Why Most Sales Training Fails (And How to Fix It)',
    description: 'The surprising reason your training investments aren\'t paying off, and what to do instead.',
    duration: '42 min',
    date: 'Jan 1, 2026',
    link: '#'
  },
  {
    number: 39,
    title: 'Coaching Underperformers: When to Invest vs Move On',
    description: 'A framework for making tough decisions about struggling team members.',
    duration: '35 min',
    date: 'Dec 25, 2025',
    link: '#'
  },
  {
    number: 38,
    title: 'The Onboarding Playbook for New Sales Hires',
    description: 'How to get new reps ramped and producing in half the time.',
    duration: '40 min',
    date: 'Dec 18, 2025',
    link: '#'
  },
  {
    number: 37,
    title: 'Compensation Plans That Drive the Right Behavior',
    description: 'Designing incentives that align with your business goals.',
    duration: '48 min',
    date: 'Dec 11, 2025',
    link: '#'
  }
];
---

<Layout>
  <Nav variant="light" />

  <!-- Hero -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-sm uppercase tracking-[0.15em] text-accent-600 dark:text-accent-400 mb-4">
            The Sales Leadership Podcast
          </p>
          <h1 class="text-brand-900 dark:text-brand-100 mb-6">
            Candid conversations with top performers
          </h1>
          <p class="text-lg text-brand-600 dark:text-brand-400 mb-8">
            Weekly insights on sales management, leadership, and building high-performance teams. No fluff, just actionable wisdom.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="#" class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-brand-900 dark:bg-white text-brand-100 dark:text-brand-900 font-medium text-sm hover:bg-brand-800 dark:hover:bg-brand-100 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              Spotify
            </a>
            <a href="#" class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-brand-900 dark:bg-white text-brand-100 dark:text-brand-900 font-medium text-sm hover:bg-brand-800 dark:hover:bg-brand-100 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              Apple Podcasts
            </a>
          </div>
        </div>
        <div class="flex justify-center">
          <div class="w-64 h-64 md:w-80 md:h-80 rounded-2xl bg-brand-200 dark:bg-brand-800 flex items-center justify-center">
            <i class="bx bx-podcast text-8xl text-brand-400 dark:text-brand-600"></i>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Episodes -->
  <section class="py-16 md:py-24 px-4 bg-brand-50 dark:bg-brand-950">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-brand-900 dark:text-brand-100 mb-12">
        Latest Episodes
      </h2>

      <div class="space-y-6">
        {episodes.map((episode) => (
          <a
            href={episode.link}
            class="group block bg-white dark:bg-brand-900 rounded-2xl p-6 md:p-8 border border-brand-200 dark:border-brand-700 hover:border-accent-400 dark:hover:border-accent-500 transition-colors"
          >
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-accent-100 dark:bg-accent-900/50 flex items-center justify-center">
                <span class="text-sm font-bold text-accent-600 dark:text-accent-400">
                  #{episode.number}
                </span>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-medium text-brand-900 dark:text-brand-100 mb-2 group-hover:text-accent-600 dark:group-hover:text-accent-400 transition-colors">
                  {episode.title}
                </h3>
                <p class="text-sm text-brand-600 dark:text-brand-400 mb-3">
                  {episode.description}
                </p>
                <div class="flex items-center gap-4 text-xs text-brand-500 dark:text-brand-500">
                  <span class="flex items-center gap-1">
                    <i class="bx bx-time"></i>
                    {episode.duration}
                  </span>
                  <span>{episode.date}</span>
                </div>
              </div>
              <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity">
                <i class="bx bx-play-circle text-3xl text-accent-500 dark:text-accent-400"></i>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="#"
          class="inline-flex items-center gap-2 text-sm font-medium text-accent-600 dark:text-accent-400 hover:gap-3 transition-all"
        >
          View all episodes
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
