---
// LogoStrip Component - Client Social Proof with Swiper
import ftmaLogo from '../assets/logos/FTMA.svg?raw';
import hriaLogo from '../assets/logos/HRIA.svg?raw';
import omgLogo from '../assets/logos/omg.svg?raw';
import hiaLogo from '../assets/logos/hia.svg?raw';
import membrainLogo from '../assets/logos/membrain.svg?raw';
import quotapathLogo from '../assets/logos/quotapath.svg?raw';
import tabmaLogo from '../assets/logos/tabma.svg?raw';

const logos = [
  { svg: ftmaLogo, alt: 'FTMA' },
  { svg: hriaLogo, alt: 'HRIA' },
  { svg: omgLogo, alt: 'OMG' },
  { svg: hiaLogo, alt: 'HIA' },
  { svg: membrainLogo, alt: 'Membrain' },
  { svg: quotapathLogo, alt: 'Quotapath' },
  { svg: tabmaLogo, alt: 'TABMA' },
];
---

<section class="relative py-12 md:py-16 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-1">
      <h5 class="text-xs sm:text-sm font-semibold text-brand-600 dark:text-brand-400 uppercase tracking-[0.2em]">
        Trusted by Leading organisationss
      </h5>
    </div>

    <div class="swiper logo-swiper">
      <div class="swiper-wrapper items-center">
        {logos.map((logo) => (
          <div class="swiper-slide">
            <div class="flex items-center justify-center h-24 px-4">
              <div
                class="w-40 md:w-48 h-auto object-contain text-brand-600 dark:text-brand-400"
                set:html={logo.svg}
              />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  import Swiper from 'swiper';
  import { Autoplay } from 'swiper/modules';
  import 'swiper/css';

  document.addEventListener('DOMContentLoaded', () => {
    new Swiper('.logo-swiper', {
      modules: [Autoplay],
      slidesPerView: 2,
      spaceBetween: 30,
      loop: true,
      speed: 6000,
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
      },
      breakpoints: {
        640: {
          slidesPerView: 3,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 4,
          spaceBetween: 25,
        },
        1024: {
          slidesPerView: 5,
          spaceBetween: 30,
        },
        1280: {
          slidesPerView: 5,
          spaceBetween: 5,
        },
      },
    });
  });
</script>

<style>
  .logo-swiper {
    width: 100%;
    overflow: hidden;
  }

  .logo-swiper .swiper-wrapper {
    transition-timing-function: linear !important;
  }

  .swiper-slide {
    width: auto;
  }
</style>
