---
// Props: image (string), heading (string), subheading (string), copy (string), buttonText (string), buttonLink (string), buttonVariant ('primary' | 'accent')
const { image, heading, subheading, copy, buttonText, buttonLink, buttonVariant = 'primary' } = Astro.props;
---
<div class="flex flex-col md:flex-row overflow-hidden max-w-md">
  <div class="md:w-auto w-full flex justify-center md:justify-start">
    <img src={image} alt={heading} class="object-cover w-[205px] h-[290px] rounded" />
  </div>
  <div class="md:flex-1 w-full flex flex-col justify-center p-6 text-center md:text-left">
    <h6 class="!font-light mb-2">{heading}</h6>
    {subheading && <h4 class="text-lg font-semibold mb-2 text-brand">{subheading}</h4>}
    <p class="mb-4 text-gray-700 text-sm">{copy}</p>
    {buttonText && buttonLink && (
      <div>
        <a href={buttonLink} class={`inline-block w-auto font-semibold px-4 py-2 rounded shadow transition ease-in-out hover:scale-105 ${buttonVariant === 'accent' ? 'bg-brand text-accent hover:bg-brand/80' : 'bg-accent text-brand hover:bg-accent/80'}`}>
          {buttonText}
          <svg class="w-4 h-4 inline ml-1 align-middle -translate-y-[2px]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    )}
  </div>
</div>
