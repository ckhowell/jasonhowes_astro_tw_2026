<footer class="bg-brand-50 dark:bg-brand-950 border-t border-brand-200 dark:border-brand-800">
  <div class="max-w-7xl mx-auto px-4 py-12 md:py-16">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 lg:gap-12 mb-12">
      <!-- Logo & Description Column -->
      <div class="col-span-2">
        {logo && (
          <div class="mb-4">
            {logo.href ? (
              <a href={logo.href} class="inline-block">
                {logo.src ? (
                  <img src={logo.src} alt={logo.text || 'Logo'} class="h-8 w-auto" />
                ) : (
                  <span class="text-xl font-semibold text-brand-900 dark:text-white">
                    {logo.text}
                  </span>
                )}
              </a>
            ) : (
              logo.src ? (
                <img src={logo.src} alt={logo.text || 'Logo'} class="h-8 w-auto" />
              ) : (
                <span class="text-xl font-semibold text-brand-900 dark:text-white">
                  {logo.text}
                </span>
              )
            )}
          </div>
        )}
        {description && (
          <p class="text-sm text-brand-600 dark:text-brand-400 mb-6 max-w-sm">
            {description}
          </p>
        )}

        <!-- Newsletter -->
        {newsletter && (
          <div>
            {newsletter.headline && (
              <h4 class="text-sm font-medium text-brand-900 dark:text-white mb-2">
                {newsletter.headline}
              </h4>
            )}
            {newsletter.description && (
              <p class="text-sm text-brand-500 dark:text-brand-500 mb-3">
                {newsletter.description}
              </p>
            )}
            <form class="flex gap-2">
              <input
                type="email"
                placeholder={newsletter.placeholder || 'Enter your email'}
                class="flex-1 px-4 py-2 text-sm rounded-full border border-brand-200 dark:border-brand-700 bg-white dark:bg-brand-900 text-brand-900 dark:text-white placeholder-brand-400 dark:placeholder-brand-500 focus:outline-none focus:ring-2 focus:ring-accent-500"
              />
              <button
                type="submit"
                class="px-4 py-2 text-sm font-medium rounded-full bg-brand-900 dark:bg-white text-white dark:text-brand-900 hover:bg-brand-800 dark:hover:bg-brand-100 transition-colors"
              >
                {newsletter.buttonText || 'Subscribe'}
              </button>
            </form>
          </div>
        )}
      </div>

      <!-- Link Columns -->
      {columns.map((column) => (
        <div>
          <h4 class="text-sm font-medium text-brand-900 dark:text-white mb-4">
            {column.title}
          </h4>
          <ul class="space-y-3">
            {column.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-brand-600 dark:text-brand-400 hover:text-accent-600 dark:hover:text-accent-400 transition-colors"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-brand-200 dark:border-brand-800 flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Copyright -->
      {copyright && (
        <p class="text-sm text-brand-500 dark:text-brand-500">
          {copyright}
        </p>
      )}

      <!-- Bottom Links -->
      {bottomLinks && bottomLinks.length > 0 && (
        <div class="flex flex-wrap items-center gap-6">
          {bottomLinks.map((link) => (
            <a
              href={link.href}
              class="text-sm text-brand-500 dark:text-brand-500 hover:text-brand-700 dark:hover:text-brand-300 transition-colors"
            >
              {link.text}
            </a>
          ))}
        </div>
      )}

      <!-- Social Links -->
      {socialLinks && socialLinks.length > 0 && (
        <div class="flex items-center gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="text-brand-400 hover:text-accent-500 dark:text-brand-500 dark:hover:text-accent-400 transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.platform}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" set:html={socialIcons[social.platform]} />
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</footer>
