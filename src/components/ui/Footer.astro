  text: string;
  href: string;
}

interface FooterColumn {
  title: string;
  links: FooterLink[];
}

interface SocialLink {
  platform: 'twitter' | 'linkedin' | 'github' | 'youtube' | 'instagram' | 'facebook';
  href: string;
}

