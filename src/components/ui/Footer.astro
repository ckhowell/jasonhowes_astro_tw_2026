  logo?: {
    src?: string;
    text?: string;
    href?: string;
  };
  description?: string;
  columns: FooterColumn[];
  socialLinks?: SocialLink[];
  newsletter?: {
    headline?: string;
    description?: string;
    placeholder?: string;
    buttonText?: string;
  };
  copyright?: string;
  bottomLinks?: FooterLink[];
}

