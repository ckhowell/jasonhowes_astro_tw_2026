---
// CTASection - Call-to-action banner
// Centered conversion-focused section with dual buttons

interface Props {
  eyebrow?: string;
  headline: string;
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  variant?: 'default' | 'contained' | 'dark';
}

const {
  eyebrow,
  headline,
  description,
  primaryCTA,
  secondaryCTA,
  variant = 'default'
} = Astro.props;

const sectionClasses = {
  default: 'py-16 md:py-24',
  contained: 'py-16 md:py-24',
  dark: 'py-16 md:py-24 bg-brand-900 dark:bg-brand-950'
};

const containerClasses = {
  default: '',
  contained: 'bg-brand-100 dark:bg-brand-900 rounded-3xl p-12 md:p-16',
  dark: ''
};

const textClasses = {
  default: {
    eyebrow: 'text-brand-500 dark:text-brand-400',
    headline: 'text-brand-700 dark:text-brand-100',
    description: 'text-brand-600 dark:text-brand-400'
  },
  contained: {
    eyebrow: 'text-brand-500 dark:text-brand-400',
    headline: 'text-brand-700 dark:text-brand-100',
    description: 'text-brand-600 dark:text-brand-400'
  },
  dark: {
    eyebrow: 'text-brand-400',
    headline: 'text-brand-100',
    description: 'text-brand-300'
  }
};

const buttonClasses = {
  default: {
    primary: 'btn btn-primary',
    secondary: 'btn btn-secondary'
  },
  contained: {
    primary: 'btn btn-primary',
    secondary: 'btn btn-secondary'
  },
  dark: {
    primary: 'btn btn-primary',
    secondary: 'btn btn-secondary'
  }
};
---

<section class={`px-4 ${sectionClasses[variant]}`}>
  <div class="max-w-7xl mx-auto">
    <div class={`text-center ${containerClasses[variant]}`}>
      <!-- Eyebrow -->
      {eyebrow && (
        <p class={`text-sm uppercase tracking-[0.15em] mb-3 ${textClasses[variant].eyebrow}`}>
          {eyebrow}
        </p>
      )}

      <!-- Headline -->
      <h2 class={`mb-4 ${textClasses[variant].headline}`}>
        {headline}
      </h2>

      <!-- Description -->
      {description && (
        <p class={`text-lg max-w-2xl mx-auto mb-8 ${textClasses[variant].description}`}>
          {description}
        </p>
      )}

      <!-- CTAs -->
      {(primaryCTA || secondaryCTA) && (
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          {primaryCTA && (
            <a href={primaryCTA.href} class={buttonClasses[variant].primary}>
              {primaryCTA.text}
            </a>
          )}
          {secondaryCTA && (
            <a href={secondaryCTA.href} class={buttonClasses[variant].secondary}>
              {secondaryCTA.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
