---
// LogoStrip - Oatmeal-style social proof logo row
// Displays company/client logos in a horizontal arrangement

interface Logo {
  src: string;
  alt: string;
  href?: string;
}

interface Props {
  headline?: string;
  logos: Logo[];
  variant?: 'default' | 'muted' | 'bordered';
}

const {
  headline,
  logos,
  variant = 'default'
} = Astro.props;

const containerClasses = {
  default: 'py-12 md:py-16',
  muted: 'py-12 md:py-16 bg-brand-100/50 dark:bg-brand-900/50',
  bordered: 'py-12 md:py-16 border-y border-brand-200 dark:border-brand-700'
};
---

<section class={`px-4 ${containerClasses[variant]}`}>
  <div class="max-w-7xl mx-auto">
    {headline && (
      <p class="text-sm text-center text-brand-500 dark:text-brand-500 mb-8 uppercase tracking-[0.15em]">
        {headline}
      </p>
    )}

    <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-8 md:gap-x-16">
      {logos.map((logo) => (
        logo.href ? (
          <a
            href={logo.href}
            class="block opacity-60 hover:opacity-100 transition-opacity grayscale hover:grayscale-0"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src={logo.src}
              alt={logo.alt}
              class="h-8 md:h-10 w-auto object-contain"
            />
          </a>
        ) : (
          <div class="opacity-60 grayscale">
            <img
              src={logo.src}
              alt={logo.alt}
              class="h-8 md:h-10 w-auto object-contain"
            />
          </div>
        )
      ))}
    </div>
  </div>
</section>
