---
// TeamGrid - Oatmeal-style team member showcase
// Grid of team cards with photos, names, and roles

interface TeamMember {
  name: string;
  role: string;
  image?: string;
  bio?: string;
  social?: {
    twitter?: string;
    linkedin?: string;
    github?: string;
  };
}

interface Props {
  eyebrow?: string;
  headline?: string;
  description?: string;
  team: TeamMember[];
  columns?: 3 | 4;
  variant?: 'default' | 'cards' | 'minimal';
}

const {
  eyebrow,
  headline,
  description,
  team,
  columns = 4,
  variant = 'default'
} = Astro.props;

const gridCols = {
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4'
};
---

<section class="py-16 md:py-24 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    {(eyebrow || headline || description) && (
      <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16">
        {eyebrow && (
          <p class="text-sm uppercase tracking-[0.15em] text-accent-600 dark:text-accent-400 mb-3">
            {eyebrow}
          </p>
        )}
        {headline && (
          <h2 class="text-brand-900 dark:text-white mb-4">
            {headline}
          </h2>
        )}
        {description && (
          <p class="text-lg text-brand-600 dark:text-brand-400">
            {description}
          </p>
        )}
      </div>
    )}

    <!-- Team Grid -->
    <div class={`grid grid-cols-1 ${gridCols[columns]} gap-8`}>
      {team.map((member) => (
        <div class={`${variant === 'cards' ? 'bg-brand-50 dark:bg-brand-900 rounded-2xl p-6' : ''}`}>
          <!-- Photo -->
          <div class="mb-4">
            {member.image ? (
              <img
                src={member.image}
                alt={member.name}
                class={`w-full aspect-square object-cover ${variant === 'minimal' ? 'rounded-full' : 'rounded-2xl'}`}
              />
            ) : (
              <div class={`w-full aspect-square bg-brand-200 dark:bg-brand-800 flex items-center justify-center ${variant === 'minimal' ? 'rounded-full' : 'rounded-2xl'}`}>
                <span class="text-4xl font-medium text-brand-400 dark:text-brand-600">
                  {member.name.charAt(0)}
                </span>
              </div>
            )}
          </div>

          <!-- Name & Role -->
          <div class={variant === 'minimal' ? 'text-center' : ''}>
            <h3 class="text-lg font-medium text-brand-900 dark:text-white">
              {member.name}
            </h3>
            <p class="text-sm text-brand-500 dark:text-brand-500 mb-2">
              {member.role}
            </p>

            <!-- Bio -->
            {member.bio && variant !== 'minimal' && (
              <p class="text-sm text-brand-600 dark:text-brand-400 mt-3">
                {member.bio}
              </p>
            )}

            <!-- Social Links -->
            {member.social && (
              <div class={`flex gap-3 mt-4 ${variant === 'minimal' ? 'justify-center' : ''}`}>
                {member.social.twitter && (
                  <a
                    href={member.social.twitter}
                    class="text-brand-400 hover:text-accent-500 dark:text-brand-500 dark:hover:text-accent-400 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`${member.name} on Twitter`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  </a>
                )}
                {member.social.linkedin && (
                  <a
                    href={member.social.linkedin}
                    class="text-brand-400 hover:text-accent-500 dark:text-brand-500 dark:hover:text-accent-400 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`${member.name} on LinkedIn`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                )}
                {member.social.github && (
                  <a
                    href={member.social.github}
                    class="text-brand-400 hover:text-accent-500 dark:text-brand-500 dark:hover:text-accent-400 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`${member.name} on GitHub`}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </a>
                )}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
