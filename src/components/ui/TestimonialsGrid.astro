---
// TestimonialsGrid - Oatmeal-style multi-card testimonial grid
// 6-card grid with quotes, avatars, names, and roles

interface Testimonial {
  quote: string;
  name: string;
  role: string;
  company?: string;
  avatar?: string;
}

interface Props {
  eyebrow?: string;
  headline?: string;
  description?: string;
  testimonials: Testimonial[];
  columns?: 2 | 3;
}

const {
  eyebrow,
  headline,
  description,
  testimonials,
  columns = 3
} = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3'
};
---

<section class="py-16 md:py-24 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    {(eyebrow || headline || description) && (
      <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16">
        {eyebrow && (
          <p class="text-sm uppercase tracking-[0.15em] text-brand-500 dark:text-brand-400 mb-3">
            {eyebrow}
          </p>
        )}
        {headline && (
          <h2 class="text-brand-700 dark:text-brand-100 mb-4">
            {headline}
          </h2>
        )}
        {description && (
          <p class="text-lg text-brand-600 dark:text-brand-400">
            {description}
          </p>
        )}
      </div>
    )}

    <!-- Testimonials Grid -->
    <div class={`grid grid-cols-1 ${gridCols[columns]} gap-6 md:gap-8`}>
      {testimonials.map((testimonial) => (
        <div class="bg-brand-50 dark:bg-brand-900 rounded-2xl p-8">
          <!-- Quote -->
          <blockquote class="text-brand-700 dark:text-brand-300 mb-6 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          <!-- Attribution -->
          <div class="flex items-center gap-4">
            {testimonial.avatar ? (
              <img
                src={testimonial.avatar}
                alt={testimonial.name}
                class="w-12 h-12 rounded-full object-cover"
              />
            ) : (
              <div class="w-12 h-12 rounded-full bg-brand-200 dark:bg-brand-800 flex items-center justify-center">
                <span class="text-lg font-medium text-brand-600 dark:text-brand-300">
                  {testimonial.name.charAt(0)}
                </span>
              </div>
            )}
            <div>
              <div class="font-medium text-brand-700 dark:text-brand-100">
                {testimonial.name}
              </div>
              <div class="text-sm text-brand-500 dark:text-brand-500">
                {testimonial.role}{testimonial.company && `, ${testimonial.company}`}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
