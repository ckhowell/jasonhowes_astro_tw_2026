---
// Statistics - Oatmeal-style metrics/stats section
// Bold numbers with supporting text

interface Stat {
  value: string;
  label: string;
  description?: string;
}

interface Props {
  eyebrow?: string;
  headline?: string;
  description?: string;
  stats: Stat[];
  variant?: 'default' | 'cards' | 'bordered' | 'inline';
  columns?: 2 | 3 | 4;
}

const {
  eyebrow,
  headline,
  description,
  stats,
  variant = 'default',
  columns = 3
} = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4'
};

const statClasses = {
  default: '',
  cards: 'bg-brand-50 dark:bg-brand-900 rounded-2xl p-8',
  bordered: 'border-l-2 border-accent-500 dark:border-accent-400 pl-6',
  inline: 'text-center'
};
---

<section class="py-16 md:py-24 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    {(eyebrow || headline || description) && (
      <div class={`mb-12 md:mb-16 ${variant === 'inline' ? 'text-center' : 'max-w-3xl'}`}>
        {eyebrow && (
          <p class="text-sm uppercase tracking-[0.15em] text-accent-600 dark:text-accent-400 mb-3">
            {eyebrow}
          </p>
        )}
        {headline && (
          <h2 class="text-brand-900 dark:text-white mb-4">
            {headline}
          </h2>
        )}
        {description && (
          <p class="text-lg text-brand-600 dark:text-brand-400">
            {description}
          </p>
        )}
      </div>
    )}

    <!-- Stats Grid -->
    <div class={`grid grid-cols-1 ${gridCols[columns]} gap-8 md:gap-12`}>
      {stats.map((stat) => (
        <div class={statClasses[variant]}>
          <div class="text-4xl md:text-5xl lg:text-6xl font-medium text-brand-900 dark:text-white tracking-tight mb-2">
            {stat.value}
          </div>
          <div class="text-base font-medium text-brand-700 dark:text-brand-300 mb-1">
            {stat.label}
          </div>
          {stat.description && (
            <p class="text-sm text-brand-500 dark:text-brand-500">
              {stat.description}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
